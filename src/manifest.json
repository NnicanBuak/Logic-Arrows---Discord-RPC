{
  "manifest_version": 3,
  "name": "Logic Arrows — Discord RPC (Rich Presence)",
  "version": "0.1",
  "description": "Добавляет поддержку Discord Rich Presence в вашем профиле для сайта logic-arrows.io.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Discord Rich Presence"
  },
  "background": {
    "service_worker": "discordRPC_SW.js"
  },
  "content_scripts": [
    {
      "matches": ["https://logic-arrows.io/*"],
      "js": ["discordRPC_SW.js", "discordRPC_widget.js"]
    }
  ],
  "author": "Nnican",
  "homepage_url": "https://logic-arrows.io"
}